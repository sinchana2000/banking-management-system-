    <!--                          Transparent Black sheet                -->
    <div style="width: 100%; height: 522px; background-color: black; opacity: .7; position: absolute;">

    </div>

    <!--                               Your Payment Gateway Heading                    -->
    <h1 class="mt-3" style="text-align: center; color: white; position: relative; letter-spacing: 2px; font-weight: 700;">Your Payment Gateway</h1>

    <!--                                  Middle Transparent Sheet                  -->
    <section style="position: absolute; width: 600px; margin-left:320px ; margin-top: 30px; height: 300px; background-color: black; opacity: .8;">

    </section>

    <!--                                        Inside middle transparent sheet form               -->
    <section style="margin-top: 38px !important; width: 600px; height: 300px; margin: auto; position: relative;">
        <form action="/payments" method="POST" style="text-align: center; margin-top: 100px; color: white; letter-spacing: 2px;">
            <label for="to">Recipient</label>
            <input name="recipient" style="outline: none;" class="payform" type="text" id="to" placeholder="Enter A/C no" required><br><br>
            <label for="amt">Amount</label>
            &nbsp&nbsp<input name="amount" id="amt" style="outline: none;" class="payform" type="text" placeholder="Enter amount" required
                pattern="[1-9]|[1-8][0-9]|9[0-9]|[1-8][0-9]{2}|9[0-8][0-9]|99[0-9]|[1-8][0-9]{3}|9[0-8][0-9]{2}|99[0-8][0-9]|999[0-9]|[1-8][0-9]{4}|9[0-8][0-9]{3}|99[0-8][0-9]{2}|999[0-8][0-9]|9999[0-9]|1[0-9]{5}|200000">
             <br><button class="btn btn-outline-light" style="margin-top: 25px; width: 18rem; font-weight: 600; letter-spacing: 2px;">Proceed to pay</button>
        </form>
        <%  if(x){ %>
        <span style="margin-left: 230px; color: red; letter-spacing: 1px; font-size: .7rem; font-weight: 100;">⚠️Recipient does not exist</span>
        <% } %> 
        <% if(y){ %>
            <span style="margin-left: 225px; color: red; letter-spacing: 1px; font-size: .7rem; font-weight: 100;">⚠️Oops!!! Insufficient Balance</span>
        <% } %>  
        <% if(z){ %>
        <span style="margin-left: 205px; color: green; letter-spacing: 2px; font-size: .9rem; font-weight: 400;">Transaction Successful!!!</span>
        <% } %>
    </section>

    <!--                                      To Bottom sheet link                      -->
    <h6 style="color: white; text-align: center; letter-spacing: 2px; position: relative;">Your transaction history</h6>
    <a href="#viewtran" style="color: white; padding-left: 610px; position: relative;" >
        <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-arrow-down-circle" fill="currentColor"
            xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
            <path fill-rule="evenodd"
                d="M8 4a.5.5 0 0 1 .5.5v5.793l2.146-2.147a.5.5 0 0 1 .708.708l-3 3a.5.5 0 0 1-.708 0l-3-3a.5.5 0 1 1 .708-.708L7.5 10.293V4.5A.5.5 0 0 1 8 4z" />
        </svg>
    </a>


    <!--                                     Transactions sheet                    -->
    <div style="background-color: #090930 ; width: 100%; height: 700px; margin-top: 5px; opacity: .8;position: absolute;"></div>

    <section style="width: 900px; margin-top: 100px; margin-left: 180px; height: 400px; background-color: white; position: absolute; opacity: .7;"></section>
    <div id="viewtran" style="overflow-x: hidden; overflow-y:scroll; width: 900px; height: 400px; position: relative; margin-left: 180px; margin-top: 100px;">
     <% if(custobj){  %> 
        <div>
            <span class="tabl">T_ID</span>
            <span class="tabl">PAYER</span>
            <span class="tabl">PAYEE</span>
            <span class="tabl">AMOUNT</span> 
            <span class="tabl">T_DATE</span>
            <span class="tabl">T_TYPE</span><br>
        </div> 
        <% for(let i of tr){ %>
           <section">
                <span class="tabl2" style="width: 120px;"><%= i.transaction_id %></span>
                <span class="tabl2" style="width:150px;"><%= i.sendingfrom %></span>
                <span class="tabl2" style="width: 150px;"><%= i.sendingto %></span>
                <span class="tabl2" style="width: 150px;"><%= i.amount %></span>
                <span class="tabl2"><%= i.transaction_date.toDateString() %></span>
                <% if(i.sendingfrom === custobj.cust_id){ %>
                <span class="tabl2" style="width: 120px;">Debited</span><br>
                <% }else{ %>
                <span class="tabl2" style="width: 120px;">Credited</span><br>
                <% } %>
                
            </section>                  
        <% } %>  
     <% } %> 
       
    </div>
    <button style="position: relative; margin-left: 500px; letter-spacing: 1px;" class="mt-5 btn btn-outline-light"><b>Print as PDF</b></button>
    <a href="#paymentsec" style="text-decoration: none; color: white; position: absolute; font-size: .9rem; margin-top: 50px; margin-left: 30px;">
